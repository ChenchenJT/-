.userinfo {
  display: flex;
  width: 100%;
  flex-direction: column;
  padding: 50rpx 0;
  align-items: center;
  background: #1aad19;
}

.userinfo-avatar {
  width: 130rpx;
  height: 130rpx;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.userinfo-nickname {
  display: flex;
  margin-top: 10px;
  color: #fff;
  align-items: center;
  justify-content: center;
}
